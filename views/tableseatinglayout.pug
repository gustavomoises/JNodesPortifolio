bodyr
  table(border='1', style='text-align:center')
    caption Available Clusters/Tables ordered by priority
    tr
      th Id. #
      th Cluster/Table
      th Number of seats
    each val in nws
      tr
        td= val.clusterId
        td= val.clusterName
        td= val.totalSeats

  table(border='1', style='text-align:center')
    caption Confirmed Reservations
    tr
      th Reserv. Id
      th Party Size
      th Waiting time in min 
      th Cutomer Id
      th Reservation Time
    each val in nys
      tr
        td= val.reservationId
        td= val.reservationPartySize
        td= val.restimemin
        td= val.customerId
        td= val.reservationDateTime


  table(border='1', style='text-align:center')
    caption Active WaitList
    tr
      th Waitlist Id
      th Party Size
      th Waiting time in min
      th Cutomer Id
    each val in nus
      tr
        td= val.waitlistId
        td= val.waitlistPartySize
        td= val.waitimemin
        td= val.customerId
